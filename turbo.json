{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": [
		"DATABASE_URL",
		"SESSION_SECRET",
		"JWT_SECRET",
		"KENNI_CLIENT_ID",
		"KENNI_CLIENT_SECRET",
		"KENNI_ISSUER_URL",
		"POSTMARK_SERVER_API_TOKEN",
		"VITE_HOSTNAME",
		"NODE_ENV"
	],
	"tasks": {
		"//#format-and-lint": {},
		"//#format-and-lint:fix": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build", "type-check"],
			"outputs": [".output/**", ".tanstack/**", "dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"type-check": {
			"dependsOn": ["^type-check"]
		}
	}
}
